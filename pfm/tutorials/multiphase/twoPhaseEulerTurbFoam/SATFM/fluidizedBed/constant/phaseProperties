FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      phaseProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

phases (particles air);

particles
{
    diameterModel constant;
    constantCoeffs
    {
        d               1.5e-4;
    }

    alphaMax 0.6;
    residualAlpha 1.e-6;
}

air
{
    diameterModel constant;
    constantCoeffs
    {
        d               1;
    }
    residualAlpha   0;
}


blending
{
    default
    {
        type            none;
        continuousPhase air;
    }
}

sigma
(
    (particles and air) 0
);

aspectRatio
(
);

drag
(
    (particles in air)
    {
        type            WenYuC;
        residualAlpha   1e-6;
        residualRe      1e-3;
        swarmCorrection
        {
            type        none;
        }
    }
);

virtualMass
(
//	(particles in air)
//    {
//        type            deWildeSATFM;
//        residualAlpha   1e-3;
//    }
);

heatTransfer
(
    (particles in air)
    {
        type            RanzMarshall;
        residualAlpha   1e-4;
    }
);

lift
(
);

wallLubrication
(
);

turbulentDispersion
(
);

//drift Velocity
driftVelocity
(
	(particles in air)
    {
        type            driftVelocitySATFM;
		residualAlpha   1e-3;			 // below residualAlpha drift velocity is zero s
    }
);

// Minimum allowable pressure
pMin            10000;


