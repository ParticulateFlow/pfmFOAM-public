// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

phases (particles air);

particles
{
	
    diameterModel constant;
    constantCoeffs
    {
        d               3e-3; // mean particle diamter 
    }

    alphaMax        0.60;   // maximum allowable packing fraction 
    residualAlpha   1e-6;   
}

air
